
{{#each pets}}
<div class="col-md-4 col-lg-3 mb-4">
  <div class="card h-100" style="border-radius: 20px;">
    <img src="/backend/images/{{ imageName }}" class="card-img-top" alt="..." style="max-height: 250px; object-fit: cover; border-radius: 20px;"> <!-- Added border-radius to the image -->
    <div class="card-body">
      <h5 class="card-title">{{petname}}</h5>
      <p class="card-text">Age: {{age}} years<br> Breed: {{breed}} <br> Location: {{location}}</p>
    </div>
    <div class="card-footer">
      <a href="/pet-details/{{ _id }}" class="btn btn-primary">Details</a>
      <a href="/pet-details/{{ _id }}" class="btn btn-primary">Adopt</a>
    </div>
  </div>
</div>
{{/each}}


{{#each geo}}
<div class="col">
        <div class="card"
          style="width: 22rem; padding-top:20px ; border-radius:30px ; box-shadow: rgba(0, 0, 0, 0.25) 0px 0.0625em 0.0625em, rgba(0, 0, 0, 0.25) 0px 0.125em 0.5em, rgba(255, 255, 255, 0.1) 0px 0px 0px 1px inset; left: 35px;">
          <img src="/backend/images/{{ center.imageName }}" class="card-img-top" alt="..." height="346px" width="346px">
          <div class="card-body">
            <h5 class="card-title">{{center.petname}}</h5>
            <p class="card-text">Age: {{center.age}} years<br> Breed: {{center.breed}} <br> Location: {{center.location}}</p>
          </div>
          <div class="card-body">
            <a href="/pet-details/{{ center._id }}" class="btn btn bg-info">Details</a>
            <a href="/pet-details/{{ center._id }}" class="btn btn bg-info" class="btn btn bg-primary-subtle">Adopt</a>
          </div>
        </div>
</div>
{{/each}}

